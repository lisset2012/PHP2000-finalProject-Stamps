<div class="row">
	<div class="col-sm">
		<h1>Edit stamp</h1>

		<form action="editstamp" method="post" enctype="multipart/form-data">
			<div class="form-group">
				<label for="stamp_image">Edit stamp image</label>
                <img src="images/<?= $stamp->stamp_img?>"  height="250" width="auto" >
				<input type="file" class="form-control-file" id="stamp_image" name="stamp_image">
			</div>
			<div class="form-group">
				<label for="stamp_name">Stamp name</label>
				<input type="text" class="form-control" id="stamp_name" name="stamp_name" placeholder="<?= $stamp->name?>">
			</div>
			<div class="form-group">
				<select name="album">
